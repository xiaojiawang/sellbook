<% content_for :content do%>
<div class="row">

<% @books.each do |book| %>
<div class="col-md-3">
<div style="height: 290px;">
<%= image_tag book.pic_key.thumb.url if book.pic_key.present? %>
书名:<%= book.name %><br>
作者:<%= book.author %><br>
描述:<%= book.description %><br>
</div>
</div>
<% end %>

</div>
<% end %>