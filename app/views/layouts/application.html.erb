<!DOCTYPE html>
<html>
<head>
  <title>SellBook</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag "/css/bootstrap" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "/js/bootstrap" %>
  
</head>
<body>
<div class="row">
      <div class="col-md-12">
        <div class="col-md-2"></div>
        <div class="col-md-8">

          <nav class="navbar navbar-default">
            <div class="container-fluid"> 

              <ul class="nav navbar-nav">
                <li><%= link_to '书籍主页', books_path %></li>
                <li><%#= link_to '书籍', articles_path%></li>
                <li><%#= link_to '用户', users_path%></li>
              </ul>

              <% if current_user.present? %>
              <ul class="nav navbar-nav navbar-right">
                <!-- <li><%#= link_to '注销', sign_out_path, data:{ confirm: "确定注销吗"}%></li> -->
                <li class="dropdown">
                  <a href="<%= users_path %>" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">个人中心 <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                      <li><%= link_to '用户中心', self_info_users_path %></li>
                      <li><%= link_to '添加我的图书', new_book_path %></li>
                      <li><%= link_to '注销', sign_out_path, data: { confirm: "确定退出账户吗?"} %></li>
                    </ul>
                </li>
              </ul>
              <% else %>

              <ul class="nav navbar-nav navbar-right">
                <!-- <li class="dropdown"><%#= link_to '个人中心', users_path %> -->
                <li><%= link_to '注册', register_path %></li>
                <li><%= link_to '登录', login_path %></li>
              </ul>
              <% end %>
            </div>
          </nav>

<!--           <div class="jumbotron">
            <div class="container">
              <h1><center>(｡・`ω´･)welcome</center></h1>
            </div>
          </div> -->

          <%# flash.each do |message_type, message| %>
          <!-- <div class="alert alert-<%#= message_type %>"><%#= message %></div> -->
          <%# end %>
          <%= yield :content%>
          </div>
          <div class="col-md-2"></div>
      </div>
    </div>

<%= yield %>

</body>
</html>
